{
  "name": "cfn-lint-action",
  "version": "2.1.0",
  "private": true,
  "description": "Action to setup CloudFormation to the the PATH",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --verbose && eslint . && prettier --check .",
    "build": "ncc build index.js --out dist --license licenses.txt",
    "format": "prettier --write .",
    "all": "npm run format && npm test && npm run build",
    "prepare": "husky"
  },
  "license": "MIT License",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/exec": "^2.0.0",
    "@actions/io": "^2.0.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.3",
    "eslint": "^10.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "3.8.1"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
