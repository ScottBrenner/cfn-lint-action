{
  "name": "cfn-lint-action",
  "version": "2.1.0",
  "private": true,
  "description": "Action to setup CloudFormation to the the PATH",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --verbose && eslint . && prettier --check .",
    "build": "ncc build index.js --out dist --license licenses.txt",
    "format": "prettier --write .",
    "all": "npm run format && npm test && npm run build",
    "prepare": "husky install"
  },
  "license": "MIT License",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/io": "^1.1.3"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.3.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.5",
    "prettier": "3.2.5"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
